generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id          Int           @id @unique @default(autoincrement())
  title       String
  description String
  image       String
  userId      Int
  likes       PostLike[]
  createdBy   User          @relation(fields: [userId], references: [id])
  tags        TagsOnPosts[]
  comments    Comment[]
}

model PostLike {
  id    Int           @id @unique @default(autoincrement())
  userId Int
  postId Int
  user   User          @relation(fields: [userId], references: [id])
  post   Post          @relation(fields: [postId], references: [id])
  
  @@unique([postId, userId])
}

model Tag {
  id    Int           @id @unique @default(autoincrement())
  name  String
  posts TagsOnPosts[]
}

model TagsOnPosts {
  postId Int
  tagId  Int
  tag    Tag  @relation(fields: [tagId], references: [id])
  post   Post @relation(fields: [postId], references: [id])

  @@id([postId, tagId])
}

model User {
  id         Int     @id @unique @default(autoincrement())
  firstName  String
  secondName String
  email      String  @unique
  password   String
  posts      Post[]
  likes      PostLike[]
  comments   Comment[]
}

model Comment {
  id         Int     @id @unique @default(autoincrement())
  body       String
  createdAt  DateTime @default(now())
  postId     Int
  authorId   Int
  post       Post    @relation(fields: [postId], references: [id])
  author       User    @relation(fields: [authorId], references: [id])
}
