generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id Int @unique @default(autoincrement()) @id
  title String
  description String
  image String
  tags TagsOnPosts[]
  createdBy User @relation(fields: [userId], references: [id])
  userId Int
  postLike PostLike[]
}
model Tag {
  id Int @unique @default(autoincrement()) @id
  name String
  posts TagsOnPosts[]
}

model TagsOnPosts{
  post Post @relation(fields: [postId], references: [id])
  postId Int 
  tag Tag @relation(fields: [tagId], references: [id])
  tagId Int
  @@id([postId, tagId])
}

model User{
  id Int @unique @default(autoincrement()) @id
  firstName String
  secondName String
  email String @unique
  avatar String
  password String
  isAdmin Boolean @default(false)
  posts Post[]
  postLike PostLike[]
}

model PostLike{
  post Post @relation(fields: [postId], references: [id])
  postId Int
  user User @relation(fields: [userId], references: [id])
  userId Int
  @@id([postId, userId])
}