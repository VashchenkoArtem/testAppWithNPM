generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id          Int           @id @unique @default(autoincrement())
  title       String
  description String
  image       String
  userId      Int
  likes       Int
  createdBy   User          @relation(fields: [userId], references: [id])
  tags        TagsOnPosts[]
}

model Tag {
  id    Int           @id @unique @default(autoincrement())
  name  String
  posts TagsOnPosts[]
}

model TagsOnPosts {
  postId Int
  tagId  Int
  tag    Tag  @relation(fields: [tagId], references: [id])
  post   Post @relation(fields: [postId], references: [id])

  @@id([postId, tagId])
}

model User {
  id         Int     @id @unique @default(autoincrement())
  firstName  String
  secondName String
  email      String  @unique
  avatar     String
  password   String
  isAdmin    Boolean @default(false)
  posts      Post[]
}
